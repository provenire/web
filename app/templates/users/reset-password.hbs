<div class="register-container full-height p-t-30">
  <div class="container-sm-height full-height">
    <div class="row row-sm-height">
      <div class="col-sm-12 col-sm-height col-middle">
        <img alt="logo" width="190" src="/assets/antiquarium/antiquarium/antiquarium@2x.png" data-src="/assets/antiquarium/antiquarium/antiquarium@2x.png" data-src-retina="/assets/antiquarium/antiquarium/antiquarium.png@2x.png">
        <h3>Reset your password.</h3>
        <form id="form-register" class="p-t-15" role="form" {{action 'resetPassword' on='submit'}}>
          {{#if errorMessage}}
            <span class="text-danger">{{errorMessage}}</span>
          {{/if}}
          {{#if passwordReset}}
            <span class="text-complete">Your password has been reset. Please {{#link-to 'login'}}Login{{/link-to}}</span>
          {{/if}}
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group form-group-default">
                <label>Password</label>
                {{input value=password type='password' class="form-control" required=true}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group form-group-default">
                <label>Password Confirmation</label>
                {{input value=password_confirmation type='password' class="form-control" required=true}}
              </div>
            </div>
          </div>
          <button class="btn btn-primary btn-cons m-t-10" type="submit" disabled={{submitted}}>
            {{#if submitted}}<span class="pull-left"><i class="fa fa-spinner fa-pulse"></i></span>{{/if}}
            Reset password
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
