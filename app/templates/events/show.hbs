<!-- START JUMBOTRON -->
<div class="jumbotron" data-pages="parallax">
  <div class="container-fluid container-fixed-lg">
    <div class="inner">
      <!-- START BREADCRUMB -->
      <ul class="breadcrumb">
        <li>
          <p>Events</p>
        </li>
        <li><span class="active">{{model.name}}</span>
        </li>
      </ul>
      <!-- END BREADCRUMB -->

      <div class="container-md-height m-b-20">
        <div class="row row-md-height">
          <div class="col-lg-7 col-md-6 col-md-height col-middle bg-white">
            <!-- START PANEL -->
            <div class="full-height">
              <div class="panel-body text-center">
                <div class="row">
                  <div class="col-sm-7">
                    {{#link-to 'artifacts.show' firstArtifact}}
                      {{image-block src=firstArtifact.picture.image.show width=330 classes='image-responsive'}}
                    {{/link-to}}
                  </div>
                  <div class="col-sm-5">
                    <div class="row">
                      <div class="col-sm-12">
                        {{image-block width=150 classes='image-responsive'}}
                      </div>
                    </div>
                    <br>
                    <div class="row">
                      <div class="col-sm-12">
                        {{image-block width=150 classes='image-responsive'}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- END PANEL -->
          </div>
          <div class="col-lg-5 col-md-height col-md-6 col-top">
            <!-- START PANEL -->
            <div class="panel panel-transparent">
              <div class="panel-heading">
                <div class="panel-title">Event Summary</div>
              </div>
              <div class="panel-body">
                <h3>{{model.name}}</h3>

                {{model.description}}
                <br>

                <div class="inline m-t-20">

                </div>
              </div>
            </div>
            <!-- END PANEL -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END JUMBOTRON -->
