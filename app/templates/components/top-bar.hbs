<!-- HEADER -->
<div class="header ">
  <!-- Mobile Controls -->
  <div class="pull-left full-height visible-sm visible-xs">
    <div class="sm-action-bar">
      <a href="#" class="btn-link toggle-sidebar" data-toggle="sidebar">
        <span class="icon-set menu-hambuger"></span>
      </a>
    </div>
  </div>
  <div class="pull-right full-height visible-sm visible-xs">
    <div class="sm-action-bar">
      <a href="#" class="btn-link" data-toggle="quickview" data-toggle-element="#quickview">
        <span class="icon-set menu-hambuger-plus"></span>
      </a>
    </div>
  </div>
  <!-- / Mobile Controls -->


  <div class=" pull-left sm-table">
    <div class="header-inner">
      <!-- Logo -->
      <div class="brand inline">
        {{#link-to 'dashboard'}}
          <img alt="logo" width="190" src="/assets/antiquarium/antiquarium/antiquarium@2x.png" data-src="/assets/antiquarium/antiquarium/antiquarium.png" data-src-retina="/assets/antiquarium/antiquarium/antiquarium@2x.png">
        {{/link-to}}
      </div>
      <!-- / Logo -->

      <ul class="notification-list no-margin hidden-sm hidden-xs b-grey b-l b-r no-style p-l-30 p-r-20">
        <!-- Notifications -->
        <li class="p-r-15 inline fs-16">
          <div class="dropdown">
            <a href="javascript:;" id="notification-center" class="" data-toggle="dropdown">
              <span class="fs-13 label">0</span>
            </a>
            <div class="dropdown-menu notification-toggle" role="menu" aria-labelledby="notification-center">
              <div class="notification-panel">
                <div class="notification-body scrollable">

                  <!-- Task Item -->
                  <div class="notification-item unread clearfix">
                    <div class="heading">
                      <a href="#" class="text-complete">
                        <i class="fa fa-envelope m-r-10"></i>
                        <span class="bold">Notifications Subject</span>
                        <span class="fs-12 m-l-10">New message</span>
                      </a>
                      <span class="pull-right time">
                        1 min ago
                      </span>
                    </div>
                    <div class="option" data-toggle="tooltip" data-placement="left" title="mark as read">
                      <a href="javascript:;" class="mark"></a>
                    </div>
                  </div>
                  <!-- / Task Item -->

                </div>
                <div class="notification-footer text-center">
                  <a href="#" class="">See all notifications</a>
                  <a data-toggle="refresh" class="portlet-refresh text-black pull-right" href="#">
                    <i class="pg-refresh_new"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </li>
        <!-- / Notifications -->

        <!-- User -->
        <li class="p-r-15 inline fs-16">
          <div class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="menu">
              <span class="text-master font-heading">
                {{session.currentUser.name}} <i class="pg-arrow_minimize"></i>
              </span>
            </a>
            <ul class="dropdown-menu profile-dropdown" role="menu">
              {{#link-to 'users.show' session.currentUser tagName='li' href=false}}
                {{#link-to 'users.show' session.currentUser}}<i class="fa fa-user"></i> Profile{{/link-to}}
              {{/link-to}}

              {{#link-to 'users.edit' session.currentUser tagName='li' href=false}}
                {{#link-to 'users.edit' session.currentUser}}<i class="pg-settings_small"></i> Settings{{/link-to}}
              {{/link-to}}

              <li class="bg-master-lighter">
                <a href="logout" {{action 'invalidate' target=session}} class="clearfix">
                  <span class="pull-left">Logout</span>
                  <span class="pull-right"><i class="pg-power"></i></span>
                </a>
              </li>
            </ul>
          </div>
        </li>
        <!-- / User -->
      </ul>

      <!-- Search -->
      <a href="#" class="search-link" data-toggle="search">
        <i class="pg-search"></i>Type anywhere to <span class="bold">search</span>
      </a>
      <!-- / Search -->
    </div>
  </div>


  <!-- Page Controls -->
  <div class=" pull-right">
    <div class="header-inner">
      <a href="#" class="btn-link icon-set menu-hambuger-plus m-l-20 sm-no-margin hidden-sm hidden-xs" data-toggle="quickview" data-toggle-element="#quickview"></a>
    </div>
  </div>
  <!-- / Page Controls -->
</div>
<!-- / PAGE HEADER -->
