<!-- START JUMBOTRON -->
<div class="jumbotron" data-pages="">
  <div class="container-fluid container-fixed-lg">
    <div class="inner">
      <!-- START BREADCRUMB -->
      <ul class="breadcrumb">
        <li>
          <p>Artifacts</p>
        </li>
        <li><span class="active">{{model.name}}</span>
        </li>
      </ul>
      <!-- END BREADCRUMB -->

      <div class="container-md-height m-b-20">
        <div class="row row-md-height">
          <div class="col-lg-7 col-md-6 col-md-height col-middle bg-white">
            <!-- START PANEL -->
            <div class="full-height">
              <div class="panel-body text-center">
                {{image-block src=model.picture.image.show width=500 classes="image-responsive-height demo-mw-500"}}
              </div>
            </div>
            <!-- END PANEL -->
          </div>
          <div class="col-lg-5 col-md-height col-md-6 col-top">
            <!-- START PANEL -->
            <div class="panel panel-transparent">
              <div class="panel-heading">
                <div class="panel-title">Artifact Summary
                </div>
              </div>
              <div class="panel-body">
                <h3>{{model.name}}</h3>

                {{model.description}}
                <br>

                <div class="inline m-t-20">

                </div>
              </div>
            </div>
            <!-- END PANEL -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END JUMBOTRON -->

<!-- START CONTAINER FLUID -->
<div class="container-fluid container-fixed-lg">
  <div class="row">

    <div class="col-md-7">
      <!-- START PANEL -->
      <div class="panel panel-transparent">
        <div class="panel-heading">
          <div class="panel-title">Ownership History</div>
          <div class="panel-controls p-t-5 p-r-5">
            <ul>
              <li class="">
                <a href="#" data-placement="left" data-toggle="tooltip" title="Add new event">
                  <i class="fa fa-plus"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="panel-body">

          <div class="panel panel-group panel-transparent ownership-history-panel" data-toggle="collapse" id="accordion">

            {{#each model.events as |event|}}
              {{event-accordion event=event}}
            {{/each}}

          </div>
        </div>
      </div>
    </div>



    <div class="col-md-5">
      <!-- START PANEL -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">Details
          </div>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <td style="width:30%;padding:12px;" class="v-align-middle bold">Names</td>
                  <td style="width:70%;padding:12px;" class="v-align-middle">{{attribute-with-default names}}</td>
                </tr>
                <tr>
                  <td style="padding:12px;" class="v-align-middle bold">Artist</td>
                  <td style="padding:12px;" class="v-align-middle">{{attribute-with-default model.artist}}</td>
                </tr>
                <tr>
                  <td style="padding:12px;" class="v-align-middle bold">Date Created</td>
                  <td style="padding:12px;" class="v-align-middle">{{attribute-with-default model.dateCreated}}</td>
                </tr>
                <tr>
                  <td style="padding:12px;" class="v-align-middle bold">Dimensions</td>
                  <td style="padding:12px;" class="v-align-middle">{{attribute-with-default model.dimensions}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- END PANEL -->
    </div>
  </div>
</div>
<!-- END CONTAINER FLUID -->
